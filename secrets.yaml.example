# Secrets Configuration Example
# Copy this file to secrets.yaml and add your actual API keys
# NEVER commit secrets.yaml to git!

# OpenAI GPT-5 API Configuration
openai_api_key: "sk-proj-YOUR_API_KEY_HERE"

# Alternative: Anthropic Claude (if preferred)
anthropic_api_key: "sk-ant-YOUR_CLAUDE_KEY_HERE"

# Home Assistant Integration
ha_long_lived_token: "YOUR_HA_TOKEN_HERE"

# Optional: Notification Services
pushover_api_key: "YOUR_PUSHOVER_KEY"
pushover_user_key: "YOUR_PUSHOVER_USER"

# Database (if using external logging)
postgres_connection: "postgresql://user:pass@localhost/cropsteering"

# Weather API (for environmental data)
weather_api_key: "YOUR_WEATHER_API_KEY"